@model Examen_BastianContreras_NicoleAlegria.Models.Ciudad

@{ ViewBag.Title = "Editar Ciudad"; }

<h2 class="text-success mb-4">Editar Ciudad</h2>

<div class="row">
    <div class="col-md-5">
        <div class="card shadow border-0">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-edit"></i> Modificar Nombre
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre de la Ciudad</label>
                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary me-2" })
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }