@{
    Layout = null; // No usamos el Layout normal para que no salga el menú aquí
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login - EcoMercado Austral</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />

    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh; /* Altura completa de la pantalla */
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            background-color: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
            padding: 2rem;
        }
    </style>
</head>
<body>

    <div class="login-card text-center">
        <h3 class="text-success fw-bold mb-4">EcoMercado Austral</h3>
        <p class="text-muted mb-4">Ingrese sus credenciales para continuar</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
            </div>
        }

        <form action="@Url.Action("Login", "Acceso")" method="post">
            <div class="mb-3 text-start">
                <label class="form-label fw-bold">Usuario</label>
                <input type="text" name="NombreUsuario" class="form-control" placeholder="Ej: admin" required />
            </div>

            <div class="mb-3 text-start">
                <label class="form-label fw-bold">Contraseña</label>
                <input type="password" name="Password" class="form-control" placeholder="******" required />
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
            </div>
        </form>

        <div class="mt-4 text-muted small">
            &copy; 2025 EcoMercado Austral <br /> Creado por Nicole Alegria y Bastian Contreras
        </div>
    </div>

</body>
</html>