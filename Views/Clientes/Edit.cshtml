@model Examen_BastianContreras_NicoleAlegria.Models.ClienteViewModel

@{ ViewBag.Title = "Editar Cliente"; }

<h2 class="text-success mb-4"><i class="fas fa-user-edit"></i> Editar Perfil de Cliente</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Cliente.Id)

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    Datos del Perfil
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">RUT</label>
                            @Html.EditorFor(m => m.Cliente.Rut, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Cliente.Rut, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Segmento</label>
                            @Html.DropDownListFor(m => m.Cliente.SegmentoId, Model.ListaSegmentos, new { @class = "form-select" })
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre Completo</label>
                        @Html.EditorFor(m => m.Cliente.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Cliente.Nombre, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre Empresa</label>
                        @Html.EditorFor(m => m.Cliente.Empresa, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email</label>
                            @Html.EditorFor(m => m.Cliente.Email, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Teléfono</label>
                            @Html.EditorFor(m => m.Cliente.Telefono, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary text-white">
                    <i class="fas fa-map-marked-alt"></i> Cobertura Geográfica
                </div>
                <div class="card-body">
                    <p class="text-muted small">Marque las ciudades asociadas:</p>

                    <div style="max-height: 400px; overflow-y: auto; border: 1px solid #dee2e6; padding: 10px; border-radius: 5px;">
                        @for (int i = 0; i < Model.ListaCiudades.Count; i++)
                        {
                            <div class="form-check">
                                @Html.HiddenFor(m => m.ListaCiudades[i].Id)
                                @Html.CheckBoxFor(m => m.ListaCiudades[i].IsSelected, new { @class = "form-check-input" })
                                <label class="form-check-label">
                                    @Model.ListaCiudades[i].Nombre
                                </label>
                                @Html.HiddenFor(m => m.ListaCiudades[i].Nombre)
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">Guardar Cambios</button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts { @Scripts.Render("~/bundles/jqueryval") }