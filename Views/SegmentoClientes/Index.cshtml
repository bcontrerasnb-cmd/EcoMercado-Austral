@model IEnumerable<Examen_BastianContreras_NicoleAlegria.Models.SegmentoCliente>

@{ ViewBag.Title = "Segmentos de Cliente"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-success fw-bold"><i class="fas fa-layer-group"></i> Segmentos</h2>
    @Html.ActionLink("Nuevo Segmento", "Create", null, new { @class = "btn btn-primary" })
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="table-success">
                <tr>
                    <th style="width: 30%;">Nombre</th>
                    <th style="width: 50%;">Descripción</th>
                    <th style="width: 10%;">Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold text-success">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Estado))
                            {
                                <span class="badge bg-secondary">@item.Estado</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>